<h6>Dashboard</h6>
<h4>welcome {{name}}</h4>
{{!-- <h5>stories</h5> --}}
{{#if stories}}
    <table class="striped responsive-table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Category</th>
                <th>Status</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each stories}}
            <tr>
                <td><a href="/stories/{{_id}}"></a>{{title}}</td>
                <td>{{category}}</td>
                <td><span class="dash-status">{{status}}</span></td>
                <td>{{formatDate createdAt "MMMM Do YYYY, h:mm:ss a"}}</td>
                <td>
                    <a href="/stories/edit/{{_id}}" class="btn left" style="margin-right: 10px;"><i class="fas fa-edit"></i></a>
                    <form action="/stories/{{_id}}" method="POST" id="delete-form">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit" class="btn red">
                            <i class="fas fa-trash"></i>
                        </button>
                    </form>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
    <p>no story added yet</p>
{{/if}}