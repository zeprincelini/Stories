<div class="row">
    <div class="col s12 m8 center-align">
       <div class="card">
           {{{editIcon story.user user story._id false}}}
           <div class="card-content">
             <span class="card-title">{{story.title}}</span>
               <p class="left-align">{{story.category}}</p>
               <p class="right-align">{{formatDate story.createdAt "MMMM Do YYYY"}}</p>
                <div class="divider"></div>
               <p class="left-align">{{{story.body}}}</p>
           </div>
       </div>
    </div>
    <div class="col s12 m4 center-align">
        <div class="card">
            <div class="card-content">
                <span class="card-title">{{story.user.displayName}}</span>
                <img src="{{story.user.image}}" alt="profile image" class="circle responsive-image">
            </div>
            <div class="card-action">
                <a href="/stories/user/{{story.user._id}}">More From {{story.user.displayName}}</a>
            </div>
        </div>
    </div>
</div>